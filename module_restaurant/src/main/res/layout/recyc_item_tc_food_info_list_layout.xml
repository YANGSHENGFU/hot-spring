<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:minHeight="75dp"
    android:orientation="horizontal">

    <CheckBox
        android:id="@+id/select_cb"
        android:layout_width="55dp"
        android:layout_height="65dp"
        android:layout_marginLeft="30dp"
        android:layout_weight="1"
        android:background="@drawable/search_tv_background"
        android:minWidth="70dp"
        android:minHeight="70dp"
        android:scaleX="2"
        android:scaleY="2" />

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:maxWidth="70dp"
        android:maxHeight="70dp"
        android:minWidth="70dp"
        android:minHeight="70dp"
        android:scaleType="center"
        tools:visibility="visible"></ImageView>

    <LinearLayout
        android:id="@+id/food_name_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:gravity="fill_horizontal"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="名字"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/text_size_18sp"></TextView>

        <!--<View-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_weight="1">-->
        <!--</View>-->

        <LinearLayout
            android:id="@+id/food_info_layout"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/number_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="left"
                android:text="数量"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/text_size_16sp"></TextView>

            <TextView
                android:id="@+id/price_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="right"
                android:text="价格"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/text_size_16sp"></TextView>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
