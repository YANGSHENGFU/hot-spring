<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="5dp">

    <LinearLayout
        android:id="@+id/table_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/room_bg_nobg"
        android:orientation="vertical"
        android:padding="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/round_number_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/text_size_14sp">

            </TextView>

            <TextView
                android:id="@+id/state_tv"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="right"
                android:background="@drawable/check_round_light_unclear"
                android:textColor="@color/color_666666">

            </TextView>

        </LinearLayout>

        <TextView
            android:id="@+id/table_number_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="台号：AB"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/text_size_14sp">

        </TextView>

        <TextView
            android:id="@+id/table_rs_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="人数：0"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/text_size_14sp">

        </TextView>

        <TextView
            android:id="@+id/open_order_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:background="@color/color_999999"
            android:gravity="center"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:text="开 台"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/text_size_14sp">

        </TextView>

    </LinearLayout>

</LinearLayout>
