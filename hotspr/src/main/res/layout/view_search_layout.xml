<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/title_layout"
        android:gravity="center"
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <!--楼号-->
        <TextView
            android:text="楼号"
            android:id="@+id/floor_tv"
            android:textSize="@dimen/text_size_14sp"
            android:textColor="@color/color_666666"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_marginRight="5dp">
        </TextView>

        <EditText
            android:id="@+id/floor_et"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="@dimen/text_size_10sp"
            android:textColor="@color/color_666666"
            android:lines="1"
            android:layout_height="match_parent"
            android:background="@drawable/edittext_background"
            android:paddingLeft="@dimen/dp_3">

        </EditText>

        <ImageView
            android:id="@+id/floor_img"
            android:layout_marginLeft="2dp"
            android:src="@drawable/button_open"
            android:layout_height="20dp"
            android:layout_width="20dp">
        </ImageView>

        <!--房型-->
        <TextView
            android:id="@+id/roomtype_tv"
            android:text="房型"
            android:textSize="@dimen/text_size_14sp"
            android:textColor="@color/color_666666"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

        </TextView>

        <EditText
            android:id="@+id/roomtype_et"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="@dimen/text_size_10sp"
            android:textColor="@color/color_666666"
            android:lines="1"
            android:layout_height="match_parent"
            android:background="@drawable/edittext_background"
            android:paddingLeft="@dimen/dp_3">

        </EditText>

        <ImageView
            android:id="@+id/roomtype_img"
            android:layout_marginLeft="2dp"
            android:src="@drawable/button_open"
            android:layout_height="20dp"
            android:layout_width="20dp">
        </ImageView>

        <!--房号-->
        <TextView
            android:id="@+id/roomnumber_tv"
            android:text="房号"
            android:textSize="@dimen/text_size_14sp"
            android:textColor="@color/color_666666"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">
        </TextView>

        <EditText
            android:id="@+id/roomnumber_et"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="@dimen/text_size_10sp"
            android:textColor="@color/color_666666"
            android:lines="1"
            android:layout_height="match_parent"
            android:background="@drawable/edittext_background"
            android:paddingLeft="@dimen/dp_3">

        </EditText>

    </LinearLayout>

    <RelativeLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/search_layout"
        android:orientation="horizontal"
        android:layout_height="40dp"
        android:layout_width="match_parent">

        <TextView
            android:id="@+id/tv_allRoomStatus"
            android:text="所有房间状态"
            android:textSize="@dimen/text_size_14sp"
            android:gravity="center"
            android:textColor="@color/color_D81B60"
            android:layout_height="match_parent"
            android:layout_width="wrap_content">
        </TextView>

        <TextView
            android:text="搜 索"
            android:id="@+id/tv_search"
            android:textSize="@dimen/text_size_14sp"
            android:textColor="@color/color_ffffff"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:layout_width="wrap_content"
            android:background="@drawable/search_tv_background">
        </TextView>

    </RelativeLayout>

</LinearLayout>
